<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="abe.ppmd.StartUpScreen"
    tools:showIn="@layout/activity_start_up_screen">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/home_page" />
    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@mipmap/buttonEdge"
        android:text="@string/take_photo_button"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:id="@+id/take_photo_button"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/data_base_button" />

    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@mipmap/buttonEdge"
        android:text="@string/database_button"
        android:textSize="20sp"
        android:layout_marginTop="32dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:id="@+id/data_base_button"
        android:layout_below="@+id/take_photo_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@mipmap/buttonEdge"
        android:text="@string/about_us_button"
        android:textSize="20sp"
        android:layout_marginTop="32dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:id="@+id/about_us_button"
        android:layout_below="@+id/data_base_button"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/setting"
        android:background="@mipmap/gear"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/about_us_button" />

</RelativeLayout>
